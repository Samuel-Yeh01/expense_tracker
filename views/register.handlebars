<div class="row mt-5 bg-black">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center">Register</h1>
      {{> messages}}
      {{#each err_msg}}
      <div class="alert alert-danger">
        {{this.msg}}
      </div>
      {{/each}}

      {{!-- 利用boostrap-validator做前端驗證，未滿足條件則阻止表單送出 --}}
      <form class="text-center" style="color: #5a5a5a;" action="/users/register" method="POST" data-toggle="validator">
        <!-- Name -->
        <div class="md-form">
          <input type="text" id="name" class="form-control" name="name" value="{{name}}" required>
          <label for="name">Name<span class="text-danger">*</span></label>
        </div>

        <!-- Email -->
        <div class="md-form form-group">
          <input type="email" id="email" class="form-control" name="email" value="{{email}}"
            data-error="請輸入正確 E-mail 格式" required>
          <label for="email">E-mail<span class="text-danger">*</span></label>
          <div class="help-block with-errors"></div>
        </div>

        <!-- Password -->
        <div class="md-form form-group">
          <input type="password" id="password" class="form-control" name="password" value="{{password}}"
            data-minlength="8" data-error="密碼至少 8 個字元">
          <label for="password">Password<span class="text-danger">*</span></label>
          <div class="help-block with-errors"></div>
        </div>

        <!-- Password confirm -->
        <div class="md-form form-group">
          <input type="password" id="password2" class="form-control" name="password2" data-match="#password"
            value="{{password2}}" data-match-error="兩次輸入的密碼不同，請重新輸入">
          <label for="password2">Confirm Password<span class="text-danger">*</span></label>
          <div class="help-block with-errors"></div>
        </div>


        <!-- Register button -->
        <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-1" type="submit">
          Register
        </button>

        <!-- Register -->
        <p>Already a member?
          <a href="/users/login">Login</a>
        </p>

        <!-- Social login -->
        <p>or sign in with:</p>
        <a href="/auth/facebook" class="fab fa-facebook-f"></a>
        <a href="/auth/google" class="fab fa-google"></a>
      </form>
    </div>
  </div>
</div>